<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
  	<parent>
    	<groupId>gr.media24.mSites</groupId>
    	<artifactId>mSites</artifactId>
    	<version>1.0</version>
  	</parent>
  	<artifactId>mSites.ladylike</artifactId>
  	<packaging>war</packaging>
  	<name>mSites.ladylike</name>
  	<build>
		<plugins>
	    	<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                    <overlays>
                    	<overlay>
                            <!-- An Empty groupId/artifactId Representing The Current Build -->
                        </overlay>
                        <overlay>
			    			<groupId>gr.media24.mSites</groupId>
                            <artifactId>mSites.admin</artifactId>
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
	  	</plugins>
	  	<finalName>m.ladylike</finalName>
  	</build>
	<dependencies>
    	<!-- Module Dependencies -->
    	<dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>mSites.core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
        	<groupId>gr.media24.mSites</groupId>
            <artifactId>mSites.admin</artifactId>
            <version>${project.version}</version>
	       	<type>war</type>
            <scope>runtime</scope>
        </dependency>
	    <!-- Other Dependencies -->
	   	<dependency>
            <artifactId>servlet-api</artifactId>
            <groupId>javax.servlet</groupId>
            <type>jar</type>
            <scope>provided</scope>
        </dependency>
  </dependencies>
</project>
